<AnchorPane prefHeight="189.0" prefWidth="285.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sw.praktikum.spinfood.Controller">
   <children>
      <Button layoutX="183.0" layoutY="139.0" mnemonicParsing="false" onAction="#handleConfigurationSubmit" prefHeight="25.0" prefWidth="65.0" text="Submit" />
      <GridPane layoutX="23.0" layoutY="14.0" prefHeight="108.0" prefWidth="242.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="200.0" minWidth="10.0" prefWidth="160.0" />
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="151.0" minWidth="10.0" prefWidth="82.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Food Preference:" />
            <Spinner fx:id="foodPrefSpinner" editable="true" onKeyReleased="#handleInvalidTextInputFoodPref" prefHeight="25.0" prefWidth="65.0" GridPane.columnIndex="1" />
            <Label text="Age Group:" GridPane.rowIndex="1" />
            <Spinner fx:id="ageGroupSpinner" editable="true" onKeyReleased="#handleInvalidTextInputAgeGroup" prefHeight="25.0" prefWidth="65.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Gender:" GridPane.rowIndex="2" />
            <Spinner fx:id="genderSpinner" editable="true" onKeyReleased="#handleInvalidTextInputGender" prefHeight="25.0" prefWidth="65.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <Label text="Maximal Number of Persons:" GridPane.rowIndex="3" />
            <Spinner fx:id="amountPplSpinner" editable="true" onKeyReleased="#handleInvalidTextInputMaxPpl" prefHeight="25.0" prefWidth="65.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>
   </children>
</AnchorPane>
