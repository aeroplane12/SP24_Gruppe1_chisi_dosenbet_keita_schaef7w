<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="460.0" prefWidth="740.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sw.praktikum.spinfood.Controller">
   <children>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="335.0">
         <children>
            <Button fx:id="uploadCSV" mnemonicParsing="false" onAction="#handleUploadCSV" prefHeight="25.0" prefWidth="94.0" text="Upload CSV" />
            <Button fx:id="location" mnemonicParsing="false" onAction="#handleLocation" prefHeight="25.0" prefWidth="114.0" text="Upload Location" />
            <Button fx:id="calculate" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleCalculate" prefHeight="25.0" prefWidth="134.0" text="Calculate" />
         </children>
      </HBox>
      <Button fx:id="undo" layoutX="656.0" layoutY="89.0" mnemonicParsing="false" onAction="#handleUndo" text="&lt;--" />
      <Button fx:id="redo" layoutX="690.0" layoutY="89.0" mnemonicParsing="false" onAction="#handleRedo" text="--&gt;" />
      <Button fx:id="languageGerman" layoutX="649.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleLanguageGerman" prefHeight="25.0" prefWidth="34.0" text="DE" />
      <Button fx:id="languageEnglish" layoutX="690.0" layoutY="15.0" mnemonicParsing="false" onAction="#handleLanguageEnglish" prefHeight="25.0" prefWidth="34.0" text="EN" />
      <Button layoutX="14.0" layoutY="57.0" mnemonicParsing="false" onAction="#handleOpenWindow" text="Calculation configuration" />
      <TabPane layoutX="17.0" layoutY="114.0" prefHeight="332.0" prefWidth="707.0" tabClosingPolicy="UNAVAILABLE">
        <tabs>
          <Tab text="Participants">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="personTab" prefHeight="303.0" prefWidth="754.0">
                           <columns>
                              <TableColumn fx:id="personID" prefWidth="75.0" text="ID" />
                              <TableColumn fx:id="personName" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="personFoodPref" prefWidth="75.0" text="Food Preference" />
                              <TableColumn fx:id="personAgeRange" prefWidth="75.0" text="Age Range" />
                              <TableColumn fx:id="personGender" prefWidth="75.0" text="Gender" />
                              <TableColumn fx:id="personRegWithPartner" prefWidth="75.0" text="Reg. with Partner" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
          <Tab text="Couples">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="coupleTab" prefHeight="303.0" prefWidth="716.0">
                           <columns>
                              <TableColumn fx:id="coupleID" prefWidth="75.0" text="Couple ID" />
                              <TableColumn fx:id="couplePerson1ID" prefWidth="75.0" text="Person 1 ID" />
                              <TableColumn fx:id="couplePerson2ID" prefWidth="75.0" text="Person 2 ID" />
                              <TableColumn fx:id="coupleFoodPref" prefWidth="75.0" text="Food Preference" />
                              <TableColumn fx:id="coupleWhoseKitchen" prefWidth="75.0" text="Whose Kitchen" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
            <Tab text="Groups">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="groupTab" prefHeight="303.0" prefWidth="711.0">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <Button layoutX="600.0" layoutY="89.0" mnemonicParsing="false" onAction="#handleRefreshTable" text="Refresh" />
   </children>
</AnchorPane>
