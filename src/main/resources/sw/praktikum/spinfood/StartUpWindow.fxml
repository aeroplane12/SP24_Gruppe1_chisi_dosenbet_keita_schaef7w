<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="780.0" prefWidth="1360.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sw.praktikum.spinfood.Controller">
   <children>
      <HBox layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="575.0">
         <children>
            <Button fx:id="uploadLocationButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#handleLocation" prefHeight="25.0" prefWidth="146.0" text="Partyort hochladen" HBox.hgrow="ALWAYS" />
            <Button fx:id="uploadCSVButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#handleUploadCSV" prefHeight="25.0" prefWidth="158.0" text="Teilnehmerliste hochladen" HBox.hgrow="ALWAYS" />
            <Button fx:id="calculateButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#handleCalculate" prefHeight="25.0" prefWidth="144.0" text="Gruppen berechnen" HBox.hgrow="ALWAYS" />
            <Button fx:id="saveGroupsButton" alignment="CENTER" contentDisplay="CENTER" disable="true" mnemonicParsing="false" onAction="#handleSaveGroupsWindow" prefHeight="25.0" prefWidth="136.0" text="Speichern" HBox.hgrow="ALWAYS" />
         </children>
      </HBox>
      <Button fx:id="undo" layoutX="658.0" layoutY="89.0" mnemonicParsing="false" onAction="#handleUndo" text="&lt;--" AnchorPane.rightAnchor="48.0" />
      <Button fx:id="redo" layoutX="692.0" layoutY="89.0" mnemonicParsing="false" onAction="#handleRedo" text="--&gt;" AnchorPane.rightAnchor="14.0" />
      <Button fx:id="calculationConfigButton" layoutX="14.0" layoutY="52.0" mnemonicParsing="false" onAction="#handleOpenWindow" text="Berechnungseinstellungen" AnchorPane.leftAnchor="14.0" />
      <Button fx:id="removeParticipantButton" layoutX="188.0" layoutY="52.0" mnemonicParsing="false" onAction="#handleRemoveParticipant" prefHeight="25.0" prefWidth="149.0" text="Teilnehmer entfernen" />
      <TabPane layoutX="14.0" layoutY="114.0" prefHeight="332.0" prefWidth="712.0" tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="114.0">
        <tabs>
          <Tab fx:id="participantsTabSel" text="Teilnehmer">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="personTab" editable="true" prefHeight="303.0" prefWidth="736.0" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="personID" prefWidth="75.0" text="Personen ID" />
                              <TableColumn fx:id="personName" prefWidth="75.0" text="Name" />
                              <TableColumn fx:id="personKitchen" prefWidth="75.0" text="Küche">
                                 <columns>
                                    <TableColumn fx:id="personKitchenLongitude" prefWidth="75.0" text="Längengrad" />
                                    <TableColumn fx:id="personKitchenLatitude" prefWidth="75.0" text="Breitengrad" />
                                    <TableColumn fx:id="personKitchenStory" prefWidth="75.0" text="Stockwerk" />
                                 </columns>
                              </TableColumn>
                              <TableColumn fx:id="personFoodPref" prefWidth="75.0" text="Essensvorliebe" />
                              <TableColumn fx:id="personAgeRange" prefWidth="75.0" text="Altersspanne" />
                              <TableColumn fx:id="personGender" prefWidth="75.0" text="Geschlecht" />
                              <TableColumn fx:id="personRegWithPartner" prefWidth="75.0" text="Reg. mit Partner" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
          <Tab fx:id="couplesTabSel" text="Paare">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="coupleTab" editable="true" prefHeight="303.0" prefWidth="716.0" HBox.hgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="coupleID" prefWidth="75.0" text="Paar ID" />
                              <TableColumn fx:id="couplePerson1" prefWidth="75.0" text="Person 1 ID" />
                              <TableColumn fx:id="couplePerson2" prefWidth="75.0" text="Person 2 ID" />
                              <TableColumn fx:id="coupleKitchen1" prefWidth="75.0" text="Küche 1">
                                 <columns>
                                    <TableColumn fx:id="coupleKitchen1Longitude" prefWidth="75.0" text="Längengrad" />
                                    <TableColumn fx:id="coupleKitchen1Latitude" prefWidth="75.0" text="Breitengrad" />
                                    <TableColumn fx:id="coupleKitchen1Story" prefWidth="75.0" text="Stockwerk" />
                                 </columns></TableColumn>
                              <TableColumn fx:id="coupleKitchen2" prefWidth="75.0" text="Küche 2">
                                 <columns>
                                    <TableColumn fx:id="coupleKitchen2Longitude" prefWidth="75.0" text="Längengrad" />
                                    <TableColumn fx:id="coupleKitchen2Latitude" prefWidth="75.0" text="Breitengrad" />
                                    <TableColumn fx:id="coupleKitchen2Story" prefWidth="75.0" text="Stockwerk" />
                                 </columns></TableColumn>
                              <TableColumn fx:id="coupleFoodPref" prefWidth="75.0" text="Essensvorliebe" />
                              <TableColumn fx:id="coupleWhoseKitchen" prefWidth="75.0" text="Wessen Küche" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                     </children>
                  </HBox>
               </content>
          </Tab>
            <Tab fx:id="groupsTabSel" text="Gruppen">
               <content>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <TableView fx:id="groupTab" editable="true" prefHeight="303.0" prefWidth="711.0" HBox.hgrow="ALWAYS">
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                           <columns>
                              <TableColumn fx:id="groupID" prefWidth="75.0" text="Gruppen ID" />
                              <TableColumn fx:id="groupHost" prefWidth="75.0" text="Gastgeber ID" />
                              <TableColumn fx:id="groupGuest1" prefWidth="75.0" text="Gast 1 ID" />
                              <TableColumn fx:id="groupGuest2" prefWidth="75.0" text="Gast 2 ID" />
                              <TableColumn fx:id="groupFoodPref" prefWidth="75.0" text="Essensvorliebe" />
                              <TableColumn fx:id="groupCourse" prefWidth="75.0" text="Speisegang" />
                           </columns>
                        </TableView>
                     </children>
                  </HBox>
               </content>
            </Tab>
        </tabs>
      </TabPane>
      <ComboBox fx:id="languageMenu" layoutX="745.0" layoutY="14.0" onAction="#handleSelectedLanguage" prefWidth="150.0" promptText="Sprache" AnchorPane.rightAnchor="14.0" />
   </children>
</AnchorPane>
